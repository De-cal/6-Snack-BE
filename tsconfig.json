{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.integration.test.ts",
    "**/*.controller.test.ts",
    "**/*.service.test.ts",
    "**/*.repository.test.ts",
    "**/*.middleware.test.ts",
    "**/*.cron.test.ts",
    "**/*.dto.test.ts",
    "**/*.type.test.ts",
    "**/*.util.test.ts",
    "**/*.lib.test.ts",
    "**/*.config.test.ts",
    "**/*.route.test.ts"
  ]
}
